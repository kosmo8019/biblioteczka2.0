<!DOCTYPE html>
<html>
  <head>
    <title>Biblioteczka20</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>


  <nav class="navbar navbar-default">

    <div class="container">

      <div class="navbar-header">
          <%= link_to "Recenzje", root_path, class: "navbar-brand" %>
      </div>

      <ul class="nav navbar-nav">
        <li><%= link_to "Zapisz się", new_uzytkownik_registration_path %></li>


        <% if uzytkownik_signed_in? %>
          <li><%= link_to "Wyloguj", destroy_uzytkownik_session_path, method: :delete %></li>
          <% else %>
        <li><%= link_to "Logowanie", new_uzytkownik_session_path %></li>
        <% end %>

      </ul>

      <ul class="nav navbar-nav navbar-right">

        <% if uzytkownik_signed_in? %>
          <li><%= link_to "Dodaj ksiażkę", new_ksiazka_path %></li>
        <% else %>
          <li><%= link_to "Usuń książkę", new_uzytkownik_session_path %></li>
        <% end %>

      </ul>


    </div>

  </nav>




  <p class="notice"><%= notice %></p>
  <p class="alert"><%= alert %></p>


    <%= yield %>
  </body>
</html>
